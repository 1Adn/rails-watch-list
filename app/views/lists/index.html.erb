<div class="list_banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://png.pngtree.com/background/20220714/original/pngtree-blue-film-theme-background-vector-material-picture-image_1602982.jpg)">
  Welcome to Movies List
</div>
<div> <%= link_to "Add a list", new_list_path %></div>
<div class="list_banner">
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="list_banner cards" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>')">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% else %>
      <div class="list_banner cards" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://img.freepik.com/free-vector/realistic-horizontal-cinema-movie-time-poster-with-3d-glasses-snacks-tickets-clapper-reel-blue-background-with-bokeh-vector-illustration_1284-77013.jpg)">
        <%= link_to list.name, list_path(list) %>
      <% end %>
    <% end %>
  </div>
